<div class="container">

  <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name),layout: :horizontal, label_errors: true) do |f| %>
    <%= devise_error_messages! %>
    <%= f.form_group do %>
    <h2>Log in</h2>
    <% end %>
    <%= f.email_field :email, autofocus: true, placeholder: "Enter email" %>
    <%= f.password_field :password, autocomplete: "off", placeholder: "Enter password" %>
    <%= f.form_group do %>
        <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me do %>   Remerber me ...   
        <% end -%>
    <% end %>
    <% end %>
    <%= f.form_group do %>
        <%= f.submit "Log in" %>
    <% end %>
    <%= f.form_group do %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), :class => "btn btn-default" %><br />
  
    <% end %>
  <% end %> 
 

</div>