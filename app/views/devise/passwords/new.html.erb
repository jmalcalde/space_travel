<div class="container">

    <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name),layout: :horizontal, label_errors: true, html: { method: :post }) do |f| %>
    	<%= devise_error_messages! %>
	    <%= f.form_group do %>
	    	<h2>Forgot your password?</h2>
	    <% end %>
	    
	    <%= f.email_field :email, autofocus: true, placeholder: "Enter email" %>

	    
	    <%= f.password_field :password, autocomplete: "off", placeholder: "Enter password" %>
	    <%= f.form_group do %>
	    	<%= f.submit "Send me reset password instructions" %>
	    <% end %>

	
    <% end %>
    
    
  </div>