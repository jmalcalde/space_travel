  <div class="container">

    <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name),layout: :horizontal, label_errors: true) do |f| %>
    <%= devise_error_messages! %>
    <%= f.form_group do %>
    <h2>Sign up</h2>
    <% end %>
    <%= f.text_field :name, autofocus: true, placeholder: "Enter name" %>
    <%= f.email_field :email, autofocus: true, placeholder: "Enter email" %>

    <%= f.form_group do %>
    <% if @validatable %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <% end %>
    <%= f.password_field :password, autocomplete: "off", placeholder: "Enter password" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Enter confirmation password" %>
    <%= f.form_group do %>
    <%= f.submit "Sign up" %>
    
    <% end %>


    <% end %>

    <%= render "devise/shared/links" %>
  </div>